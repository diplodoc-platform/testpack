{
  "name": "@diplodoc/testpack",
  "version": "1.0.0",
  "description": "Collection of end-to-end tests for Diplodoc platform",
  "main": "index.js",
  "exports": {
    "./*": "./build/*/index.js"
  },
  "files": [
    "build",
    "docs"
  ],
  "engines": {
    "npm": ">=11.5.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/diplodoc-platform/diplodoc.git",
    "directory": "devops/testpack"
  },
  "bugs": {
    "url": "https://github.com/diplodoc-platform/diplodoc/issues"
  },
  "homepage": "https://diplodoc.com/",
  "scripts": {
    "build": "./esbuild/build.mjs",
    "start": "npm run build && npm run serve",
    "serve": "node build/server",
    "test": "node ./scripts/init.js && npx playwright test",
    "docs": "npx @diplodoc/cli build -i docs/input -o docs/output",
    "lint": "lint update && lint",
    "lint:fix": "lint update && lint fix",
    "pre-commit": "lint update && lint-staged",
    "prepare": "husky",
    "typecheck": "tsc --noEmit"
  },
  "author": "",
  "license": "ISC",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@playwright/test": "^1.49.1"
  },
  "devDependencies": {
    "@diplodoc/lint": "^1.9.2",
    "@diplodoc/tsconfig": "^1.0.2",
    "@types/express": "^4.17.25",
    "@types/node": "^22.19.7",
    "esbuild": "^0.27.2",
    "express": "^4.21.2",
    "glob": "^10.4.5",
    "typescript": "^5.6.3"
  },
  "peerDependencies": {
    "@diplodoc/cli": "*"
  }
}
