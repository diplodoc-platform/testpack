{
  "name": "@diplodoc/testpack",
  "version": "1.0.0",
  "description": "System tests for Diplodoc platform",
  "main": "index.js",
  "exports": {
    "./*": "./build/*/index.js"
  },
  "fies": [
    "build",
    "docs"
  ],
  "scripts": {
    "build": "./esbuild/build.mjs",
    "start": "npm run build && PROJECT=docs/output PORT=3000 node build/server",
    "test": "scripts/init && npx playwright test",
    "docs": "docs build -i docs/input -o docs/output",
    "lint": "lint update && lint",
    "lint:fix": "lint update && lint fix",
    "pre-commit": "lint update && lint-staged",
    "prepare": "husky"
  },
  "author": "",
  "license": "ISC",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@playwright/test": "^1.49.1"
  },
  "devDependencies": {
    "@diplodoc/lint": "^1.3.3",
    "@diplodoc/tsconfig": "^1.0.2",
    "@types/node": "^18.19.59",
    "esbuild": "^0.19.12",
    "express": "^4.21.2",
    "glob": "^10.4.5",
    "typescript": "^5.6.3"
  },
  "peerDependencies": {
    "@diplodoc/cli": "*"
  }
}
